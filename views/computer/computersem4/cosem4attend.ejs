  <title>Attendence</title>
</head>

<body>

  <!-- login  -->
  <style>
    .login-form {
      width: 450px ;
      margin: 150px auto;
      font-size: 15px;
    }

    .login-form form {
      margin-bottom: 15px;
      background: #f7f7f7;
      box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
      padding: 30px;
    }

    .login-form h2 {
      margin: 110 10 110px;
    }

    .form-control,
    .btn {
      min-height: 38px;
      border-radius: 2px;
    }

    .btn {
      font-size: 15px;
      font-weight: bold;
    }
  </style>
  <div class="login-form">
    <form action="/otp1.10" method="POST">
      <h2 class="text-center">computer sem 4 Attendence</h2>
      <div class="form-group">
        <label  class="col-md-3 control-label">ER No.</label>
        <input name="student_er_no" class="form-control" placeholder="er no" required="required">
      </div>
      
      <div class="form-group">
        <label  class="col-md-3 control-label">Roll No.</label>
        <input name="student_roll" class="form-control" placeholder="roll no" required="required">
      </div>
      
      <div>
        <label>Select subject</label>
        <select class="form-select" name="subject" aria-label="Default select example">
          <option selected>Select subject</option>
          <option name="java_programming">java_programming</option>
          <option name="software_engineering">software_engineering</option>
          <option name="data_communication_and_computer_network">data communication and computer network</option>
          <option name="microprocessors">microprocessors</option>
          <option name="gui_application_development_using_vbnet">gui application development using vbnet</option>
        </select>
      </div>
      <br>
      <% if(locals.otp){ %>
        <div class="alter alert-danger text-center">
          <%= otp %>
        </div>
       <% } %> 
       <P>
         Enter OTP Provided by your teacher!
       </P>
      
        <p>
          <label>Enter otp :</label>
          <input type="text" name="otp" required>
        </p>
    
      <br>
      <div class="form-group">
        <button type="submit" value="submit" class="btn btn-primary btn-block">Submit</button>
      </div>

    </form>
    <!-- <p class="text-center"><a href="/homepage">Home</a></p> -->
  </div>

